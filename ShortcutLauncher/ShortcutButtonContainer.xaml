<UserControl x:Class="ShortcutLauncher.ShortcutButtonContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShortcutLauncher"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="{Binding ContainerHeight}" Width="{Binding ContainerWidth}">
    <Grid x:Name="_mainGrid" AllowDrop="True" Height="{Binding ContainerHeight}" Width="{Binding ContainerWidth}" >
        <WrapPanel x:Name="buttonContainer" HorizontalAlignment="Stretch" MinHeight="50" Height="{Binding ContainerHeight}" Width="{Binding ContainerWidth}" Margin="0,0,0,0" VerticalAlignment="Stretch" MinWidth="50"/>
    </Grid>
</UserControl>
